<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuannguyen.text1.InfoOfficeActivity">

    <ImageView
        android:id="@+id/imvAvatarOff"
        android:layout_width="@dimen/Create_Account_Image_width"
        android:layout_height="@dimen/Create_Account_Image_height"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tvNameOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imvAvatarOff"
        android:text="@string/Activity_InfoOffice"
        android:textColor="@color/TextMain"
        android:textSize="@dimen/TextSizeInfo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tvAddressOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameOff"
        android:layout_centerHorizontal="true"
        android:text="@string/Address_Office"
        android:textColor="@color/TextMain"/>

</RelativeLayout>

